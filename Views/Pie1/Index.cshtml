<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>

<script type="text/javascript">
    google.load("visualization", "1", { packages: ["corechart"] });
    google.setOnLoadCallback(drawChart);
    function drawChart() {
        $.ajax({
            type: "POST",
            url: "/Pie/AjaxMethod",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var data = google.visualization.arrayToDataTable(r);
                //Pie
                var options = {
                    title: 'Piechart'
                };
                var chart = new google.visualization.PieChart($("#chart1")[0]);
                chart.draw(data, options);

                //3D Pie
                options = {
                    title: 'Piechart',
                    is3D: true
                };
                chart = new google.visualization.PieChart($("#chart2")[0]);
                chart.draw(data, options);

                //Doughnut
                options = {
                    title: 'PieChart',
                    pieHole: 0.5
                };
                chart = new google.visualization.PieChart($("#chart3")[0]);
                chart.draw(data, options);



                //.ComboChart

                options = {
                    title: 'ComboChart',

                    vAxis: { title: 'Cups' },
                    hAxis: { title: 'Month' },
                    seriesType: 'bars',
                    series: { 5: { type: 'line' } }


                };
                chart = new google.visualization.ComboChart($("#chart4")[0]);
                chart.draw(data, options);


                //.ColumnChart
                options = {
                    title: 'ColumnChart',
                    is3D: true
                };
                chart = new google.visualization.ColumnChart($("#chart5")[0]);
                chart.draw(data, options);

                //Table

                options = {
                    title: 'LineChart',
                    is3D: true
                };
                chart = new google.visualization.LineChart($("#chart6")[0]);
                chart.draw(data, options);


                options = {
                    title: 'Table',
                    is3D: true,
                    legend: { position: 'none' },
                    colors: ['#e7711c'],
                    histogram: { lastBucketPercentile: 5 },
                    vAxis: { scaleType: 'mirrorLog' }

                };
                chart = new google.visualization.Histogram($("#chart7")[0]);
                chart.draw(data, options);



            },
            failure: function (r) {
                alert(r.d);
            },
            error: function (r) {
                alert(r.d);
            }
        });
    }
</script>
