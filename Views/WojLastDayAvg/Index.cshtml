@{
    ViewBag.Title = "Index";
}

<!--WojLastDay-->
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">

    google.charts.load('current', { 'packages': ['corechart'] });
    google.setOnLoadCallback(function () {
        drawChart();
        $("#stan_rekordu_na").on("change", function () {
            drawChart();
        });
    });


    function drawChart() {
        var stan_rekordu_na = $("#stan_rekordu_na option:selected").val();

        $.ajax({
            type: "POST",
            url: "/WojLastDayAvg/AjaxMethod",
            data: "{stan_rekordu_na: '" + stan_rekordu_na + "'}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var data = google.visualization.arrayToDataTable(r);

                var options = {
                    title: 'Zgony w województwach według daty',
                    vAxis: { title: 'ilość' },
                    hAxis: { title: 'województwo' },
                    seriesType: 'bars',
                    series: { 2: { type: 'line' } },
                    legend: {
                        position: 'bottom',
                        //alignment: 'center',
                        //orientation: 'horizontal',
                    }
                };
                chart = new google.visualization.ComboChart($("#chart")[0]);
                chart.draw(data, options);
            },
            failure: function (r) {
                alert(r.d);
            },
            error: function (r) {
                alert(r.d);
            }
        });
    }
</script>


@using (Html.BeginForm("AjaxMethod", "WojLastDayAvg", FormMethod.Post))
{
    @Html.DropDownList("stan_rekordu_na", (SelectList)ViewBag.stan_rekordu_na, new { @class = "form-control", style = "width:150px; height:35px;" })

    <div id="chart" style="border: 1px solid; height: 600px;">
    </div>
}
