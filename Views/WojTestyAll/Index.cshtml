<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type='text/javascript'>
    google.charts.load('current', { 'packages': ['annotationchart'] });

    google.charts.setOnLoadCallback(function () {
        drawChart();
        $("#wojewodztwo").on("change", function () {
            drawChart();
        });
    });

    function drawChart() {

       var wojewodztwo = $("#wojewodztwo option:selected").val();
        $.ajax({
            type: "POST",
            url: "/WojTestyAll/AjaxMethod",
            data: "{wojewodztwo: '" + wojewodztwo + "'}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (dt) {

                for (var i = 0; i < dt.length; i++)
                    dt[i][0] = new Date(dt[i][0]); //konwersja do typu datetime w JS

                var data = google.visualization.arrayToDataTable(dt);

                var options = {
                    displayAnnotations: false
                };

                var chart = new google.visualization.AnnotationChart(document.getElementById('chart_div'));
                chart.draw(data, options);
            },
            failure: function (dt) {
                alert(dt.d);
            },
            error: function (dt) {
                alert(dt.d);
            }
        });
    }
</script>

@using (Html.BeginForm("AjaxMethod", "WojTestyAll", FormMethod.Post))
{
    <h3>Testy według województw</h3>

    @Html.DropDownList("wojewodztwo", (SelectList)ViewBag.wojewodztwo, new { @class = "form-control", style = "width:300px; height:35px;" })

    <div id="chart_div" style="width: auto; height:700px;">
    </div>
}


