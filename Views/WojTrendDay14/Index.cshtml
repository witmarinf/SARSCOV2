@{
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("visualization", "1", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        $.ajax({
            type: "POST",
            url: "/WojTrendDay14/AjaxMethod",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var data = google.visualization.arrayToDataTable(r);
               /* var options = {
                    is3D: true,}
                    */
                var options = {
                    title: 'Trend dzienny dla województw - ostatnie 14 dni',

                    vAxis: { title: 'ilość przypadków' },
                    hAxis: { title: 'data dnia' },
                    seriesType: 'bars',
                    series: { 5: { type: 'line' } }
                };
                chart = new google.visualization.ComboChart($("#chart1")[0]);
               /* chart = new google.visualization.LineChart($("#chart1")[0]); */
                chart.draw(data, options);
            },
            failure: function (r) {
                alert(r.d);
            },
            error: function (r) {
                alert(r.d);
            }
        });
    }
</script>
<div id="chart1" style="width: auto; height: 600px;">
</div>

