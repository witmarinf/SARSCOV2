@{
    ViewBag.Title = "Index";
}

<!--WojTrendDay14-->

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    google.charts.load('current', { 'packages': ['corechart'] });
    google.setOnLoadCallback(function () {
        drawChart();
        $("#wojewodztwo").on("change", function () {
            drawChart();
        });
    });

    function drawChart() {

        var wojewodztwo = $("#wojewodztwo option:selected").val();

        $.ajax({
            type: "POST",
            url: "/WojTrendDay14/AjaxMethod",
            data: "{wojewodztwo: '" + wojewodztwo + "'}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var data = google.visualization.arrayToDataTable(r);

                var options = {
                    title: 'Trend dzienny zgonów dla województw - ostatnie 14 dni',
                    legend: {
                        position: 'bottom',
                        alignment: 'center',
                        orientation: 'vertical',
                    },
                    vAxis: { title: 'ilość przypadków' },
                    hAxis: { title: 'data dnia' },
                    seriesType: 'bars',
                    series: { 5: { type: 'line' } }
                };
                chart = new google.visualization.ComboChart($("#chart")[0]);
                chart.draw(data, options);
            },
            failure: function (r) {
                alert(r.d);
            },
            error: function (r) {
                alert(r.d);
            }
        });
    }
</script>

@using (Html.BeginForm("AjaxMethod", "WojTrendDay14", FormMethod.Post))
{
    //@Html.Label("województwo: ")
    @Html.DropDownList("wojewodztwo", (SelectList)ViewBag.wojewodztwo, new { @class = "form-control", style = "width:300px; height:35px;" })

    <div id="chart" style="width: 1000px; height: 600px; border: 1px solid;">
    </div>
}

