@model IEnumerable<SARSCOV2.ModelsDB.pow_target>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        th div {
            transform: rotate(270deg);
            height: 200px;
            width: 200px;
            padding: 0px 0px 0px 0px;
        }
    </style>
</head>


@using (Html.BeginForm("Index", "PowFilter", FormMethod.Post))
{
<h4>
    <span>Data początkowa:</span><input type="date" name="From" value="2021-01-27" min="2021-01-27" />
    <span>Data końcowa:</span><input type="date" name="To" value="2021-01-27" min="2021-01-27" /><br/>
    <span>Miasto:</span>
    <select id="powiat_miasto" name="powiat_miasto">
        <option value="Bydgoszcz">Bydgoszcz</option>
        <option value="Gdansk">Gdansk</option>
        <option value="Katowice">Katowice</option>
        <option value="Krakow">Krakow</option>
        <option value="Lodz">Lodz</option>
        <option value="Lublin">Lublin</option>
        <option value="Poznan">Poznan</option>
        <option value="Szczecin">Szczecin</option>
        <option value="Warszawa">Warszawa</option>
        <option value="Wroclaw">Wroclaw</option>
    </select><br/><br/>

    <input type="submit" value="Wyszukaj">
</h4>

    <table style="position: relative;" class="table table-bordered table-hover;">
        <tr>
            <th>
                <div>
                    data
                    <!--
                    atHtml.DisplayNameFor(model => model.stan_rekordu_na)
                        -->
                </div>
            </th>
            <th>
                <div>
                    miasto
                <!--
                    atHtml.DisplayNameFor(model => model.powiat_miasto)
                -->
                    miasto
                </div>
            </th>
            <th>
                <div>
                    <!--
                    atHtml.DisplayNameFor(model => model.liczba_przypadkow)
                      -->
                    liczba przypadkow
                </div>
            </th>
            <th>
                <div>
                    @Html.DisplayNameFor(model => model.zgony)
                </div>
            </th>
            <th>
                <div>
                    <!--
                    atHtml.DisplayNameFor(model => model.zgony_w_wyniku_covid_bez_chorob_wspolistniejacych)
                    -->
                    zgony w wyniku covid bez chorob wspolistniejacych
                </div>
            </th>
            <th>
                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.zgony_w_wyniku_covid_i_chorob_wspolistniejacych)
                    -->
                    zgony w wyniku covid bez chorob wspolistniejacych

                </div>
            </th>
            <th>
                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.liczba_zlecen_poz)
                    -->
                    liczba zlecen pozytywnych
                </div>
            </th>
            <th>
                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.liczba_ozdrowiencow)
                    -->
                    liczba ozdrowiencow
                </div>
            </th>
            <th>

                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.liczba_osob_objetych_kwarantanna)
                    -->
                    liczba osob objetych kwarantanna
                </div>
            </th>
            <th>
                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.liczba_wykonanych_testow)
                    -->
                    liczba wykonanych testow
                </div>
            </th>
            <th>
                <div>
                    liczba testow z wynikiem pozytywnym
                    <!--   @Html.DisplayNameFor(model => model.liczba_testow_z_wynikiem_pozytywnym)
                    -->
                </div>
            </th>
            <th>
                <div>
                    <!--
                    @Html.DisplayNameFor(model => model.liczba_testow_z_wynikiem_negatywnym)
                    -->
                    liczba testow z wynikiem pozytywnym
                </div>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.stan_rekordu_na)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.powiat_miasto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_przypadkow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zgony)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zgony_w_wyniku_covid_bez_chorob_wspolistniejacych)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zgony_w_wyniku_covid_i_chorob_wspolistniejacych)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_zlecen_poz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_ozdrowiencow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_osob_objetych_kwarantanna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_wykonanych_testow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_testow_z_wynikiem_pozytywnym)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.liczba_testow_z_wynikiem_negatywnym)
                </td>
            </tr>
        }

    </table>

}



